<!-- /templates/page.contact.liquid -->
{% section 'main-contact' %}
<style>
 .main-contact-form  {
 height: 100%;
   display: block;
    padding-bottom: 36px;
   padding-top: 52px;
   max-width: 60%;
   margin-left: 20%;

  }
  .page-container
  {
    display: none;
  }
  .form-vertical input, .form-vertical select, .form-vertical textarea{
    border: 1px solid black;
    margin-left: 0;
    font-size: max(1vw, 14px);
    line-height: 1.4;
    color: black;
    text-transform: initial;
    background: white;
}
  .fieldtitle
  {
    font-size: max(0.83vw, 12px);
    line-height: 1.2;
     font-weight: bold;
    text-transform: uppercase;
    margin-bottom: max(0.35vw, 5px);
  }
  .btn
  {
    background: #1a1a1a;
    color: white;
  }
@media (max-width: 767px)
  {
    .main-contact-form  {
      margin-top: 40vh;
      width: 90%;
      max-width: 90%;
      margin-left: 5%;
    
    }
  }
</style>
 
<div class="main-contact-form">
  
  <div class="contact-form form-vertical">
    {% form 'contact' %}

      {% if form.posted_successfully? %}
        <p class="note form-success">
          {{ 'contact.form.post_success' | t }}
        </p>
      {% endif %}

      {{ form.errors | default_errors }}

      <div class="grid">
       
        <div class="grid__item medium-up--one-half">
          <div class="fieldtitle">  Name</div>
          <label for="ContactFormName" class="label--hidden">{{ 'contact.form.name' | t }}</label>
          <input type="text" id="ContactFormName" name="contact[{{ 'contact.form.name' | t }}]" placeholder="{{ 'contact.form.name' | t }}" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" class="input-full">
        </div>

        <div class="contact-form__email grid__item medium-up--one-half">
          <div class="fieldtitle"> Email</div>
          <label for="ContactFormEmail" class="label--hidden">{{ 'contact.form.email' | t }}</label>
          <input type="email" id="ContactFormEmail" name="contact[email]" placeholder="{{ 'contact.form.email' | t }}" autocorrect="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" class="input-full">
        </div>

        <div class="grid__item">
          <div class="fieldtitle"> Phone number</div>
          <label for="ContactFormPhone" class="label--hidden">{{ 'contact.form.phone' | t }}</label>
          <input type="tel" id="ContactFormPhone" name="contact[{{ 'contact.form.phone' | t }}]" placeholder="{{ 'contact.form.phone' | t }}" pattern="[0-9\-]*" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" class="input-full">
        </div>

        <div class="grid__item">
          <div class="fieldtitle">Message</div>
          <label for="ContactFormMessage" class="label--hidden">{{ 'contact.form.message' | t }}</label>
          <textarea id="ContactFormMessage" name="contact[{{ 'contact.form.message' | t }}]" placeholder="{{ 'contact.form.message' | t }}" class="input-full">{% if form.body %}{{ form.body }}{% endif %}</textarea>
        </div>
      </div>

      <input type="submit" class="btn" style="background: #1a1a1a; color: white;" value="{{ 'contact.form.send' | t }}">

    {% endform %}
  </div>
</div>

